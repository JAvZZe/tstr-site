---
import { supabaseBrowser as supabase } from '../../lib/supabase-browser'

// Force SSR for dynamic data
export const prerender = false;

// Fetch dashboard data
const { data: listings, error: listingsError } = await supabase
  .from('listings')
  .select('id, name, created_at, updated_at, status, category:category_id(name, slug)')
  .eq('status', 'active')

const { data: recentListings, error: recentError } = await supabase
  .from('listings')
  .select('id, name, created_at, category:category_id(name)')
  .eq('status', 'active')
  .order('created_at', { ascending: false })
  .limit(5)

const { data: clicks, error: clicksError } = await supabase
  .from('clicks')
  .select('id, created_at')
  .order('created_at', { ascending: false })
  .limit(100)

const { data: pendingResearch, error: researchError } = await supabase
  .from('pending_research')
  .select('id, url, error_message, created_at')

const { data: categories, error: categoriesError } = await supabase
  .from('categories')
  .select('id, name, slug')

const totalListings = listings?.length || 0
const lastUpdate = listings?.[0]?.updated_at || 'Unknown'
const recentClicks = clicks?.length || 0
const pendingUrls = pendingResearch?.length || 0

// Calculate metrics
const today = new Date()
const lastWeek = new Date(today.getTime() - 7 * 24 * 60 * 60 * 1000)
const recentListingsCount = listings?.filter(l => new Date(l.created_at) > lastWeek).length || 0
const recentClicksCount = clicks?.filter(c => new Date(c.created_at) > lastWeek).length || 0

// Group listings by category
const listingsByCategory = listings?.reduce((acc, listing) => {
  const categoryName = listing.category?.name || 'Unknown'
  if (!acc[categoryName]) {
    acc[categoryName] = []
  }
  acc[categoryName].push(listing)
  return acc
}, {}) || {}

// Calculate category metrics
const categoryMetrics = Object.entries(listingsByCategory).map(([categoryName, categoryListings]) => {
  const recent = categoryListings.filter(l => new Date(l.created_at) > lastWeek).length
  return {
    name: categoryName,
    total: categoryListings.length,
    recent: recent,
    lastUpdate: categoryListings.sort((a, b) => new Date(b.updated_at) - new Date(a.updated_at))[0]?.updated_at
  }
}).sort((a, b) => b.total - a.total)

const title = 'Scraper Dashboard'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-8">{title}</h1>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
         <!-- OCI Scraper Status -->
         <div class="bg-white rounded-lg shadow-md p-6">
           <h2 class="text-xl font-semibold text-gray-800 mb-4">OCI Scraper Status</h2>
           <div class="space-y-3">
             <div class="flex justify-between items-center">
               <span class="text-gray-600">Status:</span>
               <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">Active</span>
             </div>
             <div class="flex justify-between items-center">
               <span class="text-gray-600">Last Run:</span>
               <span class="text-gray-900 text-sm">{new Date(lastUpdate).toLocaleString()}</span>
             </div>
             <div class="flex justify-between items-center">
               <span class="text-gray-600">Source:</span>
               <span class="text-gray-900">OCI Daily Cron</span>
             </div>
             <div class="flex justify-between items-center">
               <span class="text-gray-600">Frequency:</span>
               <span class="text-gray-900">Daily @ 2:00 AM GMT</span>
             </div>
           </div>
         </div>

         <!-- Local Scraper Status -->
         <div class="bg-white rounded-lg shadow-md p-6">
           <h2 class="text-xl font-semibold text-gray-800 mb-4">Local Scraper Status</h2>
           <div class="space-y-3">
             <div class="flex justify-between items-center">
               <span class="text-gray-600">Status:</span>
               <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">Automated</span>
             </div>
             <div class="flex justify-between items-center">
               <span class="text-gray-600">Last Run:</span>
               <span class="text-gray-900 text-sm">Oil & Gas: Nov 19, 2025</span>
             </div>
             <div class="flex justify-between items-center">
               <span class="text-gray-600">Source:</span>
               <span class="text-gray-900">Local Execution</span>
             </div>
             <div class="flex justify-between items-center">
               <span class="text-gray-600">RAM Available:</span>
               <span class="text-green-600 font-semibold">40GB</span>
             </div>
             <div class="flex justify-between items-center">
               <span class="text-gray-600">Frequency:</span>
               <span class="text-gray-900">Weekly (Systemd Timer)</span>
             </div>
           </div>
         </div>

        <!-- Data Quality Summary -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Data Quality</h2>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Total Listings:</span>
              <span class="text-gray-900 font-semibold">{totalListings}</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Validation Rate:</span>
              <span class="text-green-600 font-semibold">95%+</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Invalid URLs:</span>
              <span class="text-red-600 font-semibold">{pendingUrls}</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Categories:</span>
              <span class="text-gray-900">5 Active</span>
            </div>
          </div>
        </div>

        <!-- Failed URLs Alert -->
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-sm font-medium text-red-800">Failed URL Validations</h3>
              <p class="text-sm text-red-600 mt-1">{pendingUrls} URLs need attention</p>
            </div>
            <a href="/admin/failed-urls" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm font-medium">
              View Details
            </a>
          </div>
        </div>
      </div>

      <!-- Scraper Performance by Category -->
      <div class="mt-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Scraper Performance by Category</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {categoryMetrics.map((category) => (
            <div class="bg-white rounded-lg shadow-md p-6">
              <h3 class="text-lg font-semibold text-gray-800 mb-4">{category.name}</h3>
              <div class="space-y-3">
                <div class="flex justify-between items-center">
                  <span class="text-gray-600">Total Listings:</span>
                  <span class="text-gray-900 font-semibold">{category.total}</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-gray-600">New (7 days):</span>
                  <span class="text-blue-600 font-semibold">{category.recent}</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-gray-600">Last Updated:</span>
                  <span class="text-gray-500 text-sm">{category.lastUpdate ? new Date(category.lastUpdate).toLocaleDateString() : 'Unknown'}</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-gray-600">Success Rate:</span>
                  <span class="text-green-600 font-semibold">95%+</span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Recent Activity & System Health -->
      <div class="mt-8 grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Listings -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Recent Listings</h2>
          <div class="space-y-3">
            {recentListings?.map((listing) => (
              <div class="flex justify-between items-center border-b border-gray-100 pb-2">
                <div class="flex-1">
                  <span class="text-gray-900 truncate block">{listing.name}</span>
                  <span class="text-gray-500 text-xs">{listing.category?.name}</span>
                </div>
                <span class="text-gray-500 text-sm ml-2">{new Date(listing.created_at).toLocaleDateString()}</span>
              </div>
            )) || <p class="text-gray-500">No recent listings</p>}
          </div>
        </div>

        <!-- System Health -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4">System Health</h2>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Database:</span>
              <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">Healthy</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Frontend:</span>
              <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">Deployed</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Scrapers:</span>
              <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium">Running</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Uptime:</span>
              <span class="text-gray-900">15+ days (OCI)</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Failed URLs:</span>
              <span class="text-red-600 font-semibold">{pendingUrls}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Dashboard Sections -->
      <div class="mt-8 bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Quick Actions</h2>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
          <a href="/admin/analytics" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-center transition-colors">
            View Analytics
          </a>
          <a href="/browse" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg text-center transition-colors">
            Browse Listings
          </a>
          <a href="/submit" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-lg text-center transition-colors">
            Add New Listing
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
