import { supabase } from '../../lib/supabase'

// Force SSR for dynamic data
export const prerender = false;

// Auth Check
const { data: { session } } = await supabase.auth.getSession();
if (!session || !session.user.email?.endsWith('@tstr.directory')) {
  return Astro.redirect('/admin/login');
}

// Fetch dashboard data
const { data: listings, error: listingsError } = await supabase
  .from('listings')
  .select('id, business_name, created_at, updated_at, status, category:category_id(name, slug), source_script, script_location')
  .eq('status', 'active')

const { data: pendingListings, error: pendingError } = await supabase
  .from('listings')
  .select('id, business_name, created_at, category:category_id(name)')
  .eq('status', 'pending')
  .order('created_at', { ascending: false })

const { data: recentListings, error: recentError } = await supabase
  .from('listings')
  .select('id, business_name, created_at, category:category_id(name)')
  .eq('status', 'active')
  .order('created_at', { ascending: false })
  .limit(5)

const { data: clicks, error: clicksError } = await supabase
  .from('clicks')
  .select('id, created_at')
  .order('created_at', { ascending: false })
  .limit(100)

const { data: pendingResearch, error: researchError } = await supabase
  .from('pending_research')
  .select('id, url, error_message, created_at')

// Fetch claims data
const { data: claims, error: claimsError } = await supabase
  .from('claims')
  .select('id, provider_name, contact_name, business_email, phone, created_at, status')
  .order('created_at', { ascending: false })

// Fetch auth users (requires service role, but using anon for now - may need backend API)
const { data: users, error: usersError } = await supabase.auth.admin.listUsers()

// Calculate claims metrics
const totalClaims = claims?.length || 0
const pendingClaims = claims?.filter(c => !c.status || c.status === 'pending').length || 0
const recentClaims = claims?.filter(c => new Date(c.created_at) > lastWeek).length || 0

const { data: categories, error: categoriesError } = await supabase
  .from('categories')
  .select('id, name, slug')

const totalListings = listings?.length || 0
const pendingCount = pendingListings?.length || 0
const lastUpdate = listings?.[0]?.updated_at || 'Unknown'
const recentClicks = clicks?.length || 0
const pendingUrls = pendingResearch?.length || 0

// Calculate metrics
const today = new Date()
const lastWeek = new Date(today.getTime() - 7 * 24 * 60 * 60 * 1000)
const recentListingsCount = listings?.filter(l => new Date(l.created_at) > lastWeek).length || 0
const recentClicksCount = clicks?.filter(c => new Date(c.created_at) > lastWeek).length || 0

// Group listings by category
const listingsByCategory = listings?.reduce((acc, listing) => {
  const categoryName = listing.category?.name || 'Unknown'
  if (!acc[categoryName]) {
    acc[categoryName] = []
  }
  acc[categoryName].push(listing)
  return acc
}, {}) || {}

// For environmental testing, get subcategory breakdown
let environmentalSubcategories = {}
if (listingsByCategory['Environmental Testing']) {
  const envListings = listingsByCategory['Environmental Testing']
  // Fetch custom fields for environmental listings
  const envListingIds = envListings.map(l => l.id)
  if (envListingIds.length > 0) {
    const { data: customFields } = await supabase
      .from('listing_custom_field_values')
      .select(`
        listing_id,
        value,
        custom_fields (name)
      `)
      .in('listing_id', envListingIds)
      .eq('custom_fields.name', 'test_types')

    environmentalSubcategories = customFields?.reduce((acc, field) => {
      const value = field.value?.toLowerCase() || ''
      if (value.includes('air quality')) acc['Air Quality'] = (acc['Air Quality'] || 0) + 1
      if (value.includes('water quality')) acc['Water Quality'] = (acc['Water Quality'] || 0) + 1
      if (value.includes('soil')) acc['Soil Testing'] = (acc['Soil Testing'] || 0) + 1
      if (value.includes('noise') || value.includes('vibration')) acc['Noise/Vibration'] = (acc['Noise/Vibration'] || 0) + 1
      if (value.includes('esg') || value.includes('sustainability')) acc['ESG/Sustainability'] = (acc['ESG/Sustainability'] || 0) + 1
      return acc
    }, {}) || {}
  }
}

// Calculate category metrics
const categoryMetrics = Object.entries(listingsByCategory).map(([categoryName, categoryListings]) => {
  const recent = categoryListings.filter(l => new Date(l.created_at) > lastWeek).length
  return {
    name: categoryName,
    total: categoryListings.length,
    recent: recent,
    lastUpdate: categoryListings.sort((a, b) => new Date(b.updated_at) - new Date(a.updated_at))[0]?.updated_at
  }
}).sort((a, b) => b.total - a.total)

