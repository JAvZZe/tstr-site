import { supabase } from '../../lib/supabase';

// Force SSR - need dynamic authentication check
export const prerender = false;

// Simple authentication check - only allow if user is authenticated
const authHeader = Astro.request.headers.get('cookie');
let isAuthenticated = false;

if (authHeader) {
  try {
    const token = authHeader.split('sb-access-token=')[1]?.split(';')[0];
    if (token) {
      const { data: { user } } = await supabase.auth.getUser(token);
      isAuthenticated = !!user;
    }
  } catch (error) {
    console.error('Auth check failed:', error);
  }
}

// Redirect to home if not authenticated
if (!isAuthenticated) {
  return Astro.redirect('/');
}

// Fetch analytics data
const now = new Date();
const last30Days = new Date(now.getTime() - 30 * 24 * 60 * 60 * 1000);
const last7Days = new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000);

// Overview metrics
const { count: totalClicks } = await supabase
  .from('clicks')
  .select('*', { count: 'exact', head: true });

const { count: clicks30d } = await supabase
  .from('clicks')
  .select('*', { count: 'exact', head: true })
  .gte('created_at', last30Days.toISOString());

const { count: clicks7d } = await supabase
  .from('clicks')
  .select('*', { count: 'exact', head: true })
  .gte('created_at', last7Days.toISOString());

// Top clicked listings
const { data: topListings } = await supabase.rpc('get_top_clicked_listings', { limit_count: 10 });

// If RPC doesn't exist, fall back to manual query
let topListingsData = topListings;
if (!topListings) {
  const { data: clicksWithListings } = await supabase
    .from('clicks')
    .select(`
      listing_id,
      listings (
        id,
        business_name,
        website,
        category:category_id(name)
      )
    `)
    .not('listing_id', 'is', null)
    .order('created_at', { ascending: false });

  // Aggregate manually
  const listingCounts = new Map();
  clicksWithListings?.forEach(click => {
    const id = click.listing_id;
    if (!listingCounts.has(id)) {
      listingCounts.set(id, {
        listing: click.listings,
        count: 0,
        last_click: null
      });
    }
    const entry = listingCounts.get(id);
    entry.count++;
  });

  topListingsData = Array.from(listingCounts.values())
    .sort((a, b) => b.count - a.count)
    .slice(0, 10);
}

// Recent clicks
const { data: recentClicks } = await supabase
  .from('clicks')
  .select(`
    id,
    url,
    user_agent,
    created_at,
    listings (
      business_name,
      category:category_id(name)
    )
  `)
  .order('created_at', { ascending: false })
  .limit(20);

// Daily clicks for last 30 days
const { data: dailyClicks } = await supabase
  .from('clicks')
  .select('created_at')
  .gte('created_at', last30Days.toISOString())
  .order('created_at', { ascending: true });

// Aggregate by day
const clicksByDay = new Map();
dailyClicks?.forEach(click => {
  const date = new Date(click.created_at).toISOString().split('T')[0];
  clicksByDay.set(date, (clicksByDay.get(date) || 0) + 1);
});

const chartData = Array.from(clicksByDay.entries())
  .map(([date, count]) => ({ date, count }));
