---
import AdminLayout from '../../layouts/AdminLayout.astro';

// Force SSR shell
export const prerender = false;
---

<AdminLayout title="Listings Management">
    <div id="loading" class="flex items-center justify-center min-h-[50vh]">
        <div class="text-center">
             <svg class="animate-spin h-10 w-10 text-blue-500 mx-auto mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <p class="text-gray-500 text-lg">Loading Listings...</p>
        </div>
    </div>

    <div id="content" class="hidden">
        <div class="mb-6 flex justify-between items-center">
            <div>
                 <a href="/admin/dashboard" class="text-blue-600 hover:text-blue-800 text-sm mb-2 inline-block">‚Üê Back to Dashboard</a>
                 <h1 class="text-3xl font-bold text-gray-900">Listings Management</h1>
            </div>
            <div class="flex gap-2">
                <button class="filter-btn bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium" data-filter="all">All</button>
                <button class="filter-btn bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm font-medium" data-filter="pending">Pending</button>
                <button class="filter-btn bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm font-medium" data-filter="active">Active</button>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-800">Listings (<span id="listings-count">0</span>)</h2>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Business</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Source</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="listings-table-body" class="bg-white divide-y divide-gray-200">
                        <!-- Populated via JS -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div id="edit-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-6 max-w-lg w-full mx-4 shadow-xl">
            <h2 class="text-xl font-bold mb-4">Edit Listing</h2>
            <form id="edit-form" class="space-y-4">
                <input type="hidden" id="edit-id">
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Business Name</label>
                    <input type="text" id="edit-name" required class="w-full px-3 py-2 border rounded-lg">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Website</label>
                    <input type="url" id="edit-website" class="w-full px-3 py-2 border rounded-lg">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <select id="edit-status" class="w-full px-3 py-2 border rounded-lg">
                        <option value="pending">Pending</option>
                        <option value="active">Active</option>
                        <option value="rejected">Rejected</option>
                    </select>
                </div>

                <div class="flex justify-end gap-3 mt-6">
                    <button type="button" id="close-modal" class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg">Cancel</button>
                    <button type="submit" id="save-btn" class="px-4 py-2 bg-blue-600 text-white hover:bg-blue-700 rounded-lg">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</AdminLayout>

<script>
    import { supabaseBrowser } from '../../lib/supabase-browser';

    let currentSession = null;
    let allListings = [];

    async function loadListings() {
        const loading = document.getElementById('loading');
        const content = document.getElementById('content');
        const tbody = document.getElementById('listings-table-body');
        
        try {
            // 1. Auth Check
            const { data: { session } } = await supabaseBrowser.auth.getSession();
            if (!session) {
                window.location.href = '/admin/login';
                return;
            }
            currentSession = session;

            // 2. Fetch Data
            const res = await fetch('/api/admin/listings', {
                headers: { 'Authorization': `Bearer ${session.access_token}` }
            });

            if (!res.ok) throw new Error('Failed to load listings');

            allListings = await res.json();
            
            // 3. Render Initial (All)
            const activeFilter = document.querySelector('.filter-btn.bg-blue-100')?.getAttribute('data-filter') || 'all';
            filterRender(activeFilter);
            
            loading.classList.add('hidden');
            content.classList.remove('hidden');

        } catch (e) {
            console.error(e);
            loading.innerHTML = `<p class="text-red-500">Error: ${e.message}</p>`;
        }
    }

    function filterRender(filter) {
        if (filter === 'all') {
            renderTable(allListings);
        } else {
            renderTable(allListings.filter(l => l.status === filter));
        }
    }

    function renderTable(listings) {
        const tbody = document.getElementById('listings-table-body');
        document.getElementById('listings-count').textContent = listings.length;

        if (listings.length === 0) {
             tbody.innerHTML = '<tr><td colspan="6" class="px-6 py-12 text-center text-gray-500">No listings found</td></tr>';
             return;
        }

        tbody.innerHTML = listings.map(l => `
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900">${l.business_name}</div>
                    <div class="text-xs text-gray-500 truncate max-w-[200px]">${l.website || ''}</div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                    ${l.category?.name || 'Uncategorized'}
                </td>
                <td class="px-6 py-4">
                     <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full ${
                        l.status === 'active' ? 'bg-green-100 text-green-800' : 
                        l.status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 'bg-gray-100 text-gray-800'
                    }">
                        ${l.status}
                    </span>
                </td>
                 <td class="px-6 py-4 text-sm text-gray-500">
                    ${l.source_script || 'Manual'}
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                    ${new Date(l.created_at).toLocaleDateString()}
                </td>
                <td class="px-6 py-4 text-sm font-medium">
                    <button class="text-blue-600 hover:text-blue-900 edit-btn" data-id="${l.id}">Edit</button>
                </td>
            </tr>
        `).join('');

        // No need to bind individual buttons here anymore because we use delegation
    }

    // Modal Logic
    const modal = document.getElementById('edit-modal');
    const tbody = document.getElementById('listings-table-body');

    // Event Delegation for Table Clicks
    tbody.addEventListener('click', (e) => {
        const target = e.target;
        if (target.classList.contains('edit-btn')) {
            const id = target.getAttribute('data-id');
            openEditModal(id);
        }
    });
    
    function openEditModal(id) {
        const listing = allListings.find(l => l.id === id);
        if (!listing) return;

        document.getElementById('edit-id').value = listing.id;
        document.getElementById('edit-name').value = listing.business_name;
        document.getElementById('edit-website').value = listing.website || '';
        document.getElementById('edit-status').value = listing.status;
        
        modal.classList.remove('hidden');
    }

    document.getElementById('close-modal').addEventListener('click', () => {
        modal.classList.add('hidden');
    });

    document.getElementById('edit-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const saveBtn = document.getElementById('save-btn');
        const id = document.getElementById('edit-id').value;
        const business_name = document.getElementById('edit-name').value;
        const website = document.getElementById('edit-website').value;
        const status = document.getElementById('edit-status').value;

        saveBtn.textContent = 'Saving...';
        saveBtn.disabled = true;

        try {
            const res = await fetch('/api/admin/listings', {
                method: 'POST',
                headers: { 
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${currentSession?.access_token}`
                },
                body: JSON.stringify({ id, business_name, website, status })
            });

            if (!res.ok) throw new Error('Update failed');

            // Update Local Data
            const idx = allListings.findIndex(l => l.id === id);
            if (idx !== -1) {
                allListings[idx] = { ...allListings[idx], business_name, website, status };
                const activeFilter = document.querySelector('.filter-btn.bg-blue-100')?.getAttribute('data-filter') || 'all';
                filterRender(activeFilter);
            }

            modal.classList.add('hidden');
            
        } catch (err) {
            alert('Error: ' + err.message);
        } finally {
            saveBtn.textContent = 'Save Changes';
            saveBtn.disabled = false;
        }
    });

    // Filter Logic
    document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            document.querySelectorAll('.filter-btn').forEach(b => {
                b.className = 'filter-btn bg-gray-100 text-gray-600 px-3 py-1 rounded-full text-sm font-medium';
            });
            e.target.className = 'filter-btn bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium';
            const filter = e.target.getAttribute('data-filter');
            filterRender(filter);
        });
    });
    
    // Init
    loadListings();
</script>
