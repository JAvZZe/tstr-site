                    {listing.featured && (
                      <span class="text-yellow-600 font-semibold">‚≠ê Featured</span>
                    )}
                    {listing.verified && (
                      <span class="text-green-600 font-semibold">‚úì Verified</span>
                    )}
                  </div>

                  {listing.description && (
                    <p class="text-gray-700 mt-3 text-sm line-clamp-2">
                      {listing.description}
                    </p>
                  )}
                </div>

                {listing.website && (
                  <a
