---
// src/pages/[category]/index.astro
import { supabase } from '../../lib/supabase';
import Footer from '../../components/Footer.astro';

// Enable static prerendering at build time
export const prerender = true;

// 1. getStaticPaths: Generate pages for each category
export async function getStaticPaths() {
  const { data: categories, error } = await supabase
    .from('categories')
    .select('slug')
    .order('display_order', { ascending: true });

  if (error || !categories) {
    console.error('Error fetching categories for static paths:', error);
    return [];
  }

  return categories.map(cat => ({
    params: { category: cat.slug }
  }));
}

// 2. Page rendering: Fetch data for this category
const { category } = Astro.params;

// Fetch category metadata
const { data: categoryData } = await supabase
  .from('categories')
  .select('id, name, slug, description, icon')
  .eq('slug', category)
  .single();

if (!categoryData) {
  return Astro.redirect('/404');
}

// Fetch listings grouped by region
const { data: listings, error: listingsError } = await supabase
  .from('listings')
  .select(`
    id,
    business_name,
    region,
    featured,
    verified,
    location:location_id (
      id,
      name,
      slug
    )
  `)
  .eq('status', 'active')
  .eq('category_id', categoryData.id)
  .order('priority_rank', { ascending: false })
  .order('created_at', { ascending: false });

// Group listings by region
const listingsByRegion = new Map<string, typeof listings>();
listings?.forEach(listing => {
  const region = listing.region || 'global';
  if (!listingsByRegion.has(region)) {
    listingsByRegion.set(region, []);
  }
  listingsByRegion.get(region)?.push(listing);
});

// Sort regions by listing count (descending)
const sortedRegions = Array.from(listingsByRegion.entries())
  .sort((a, b) => b[1].length - a[1].length);

const totalListings = listings?.length || 0;

// Helper: Convert "Testers" to "Testing" for SEO hybrid hook
const getTestingServiceName = (categoryName: string) => {
  return categoryName.replace('Testers', 'Testing');
};

const testingServiceName = getTestingServiceName(categoryData.name);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{categoryData.name} & {testingServiceName} | TSTR.directory</title>
    <meta
      name="description"
      content={`Directory of ${totalListings} verified ${categoryData.name.toLowerCase()} and ${testingServiceName.toLowerCase()}. Compare ISO 17025 accredited labs and certification bodies worldwide. Get quotes from certified providers.`}
    />
    <meta property="og:title" content={`${categoryData.name} & ${testingServiceName}`} />
    <meta property="og:description" content={`Find and compare verified ${categoryData.name.toLowerCase()}. ${categoryData.description || `${testingServiceName} from ISO 17025 certified laboratories.`}`} />
  </head>

  <body class="bg-gray-50 min-h-screen font-sans text-gray-900">

    <!-- Navigation -->
    <nav class="bg-white shadow-sm p-4">
      <div class="max-w-6xl mx-auto">
        <a href="/" class="font-bold text-xl hover:text-blue-600 transition">
          TSTR<span class="text-blue-600">.directory</span>
        </a>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-5xl mx-auto p-6">

      <!-- Breadcrumbs -->
      <div class="text-sm text-gray-500 mb-4">
        <a href="/" class="hover:underline hover:text-blue-600">Home</a>
        <span class="mx-2">›</span>
        <span class="text-gray-900 font-medium">{categoryData.name}</span>
      </div>

      <!-- Page Header -->
      <div class="mb-8">
        <div class="flex items-center gap-3 mb-3">
          {categoryData.icon && (
            <span class="text-4xl">{categoryData.icon}</span>
          )}
          <h1 class="text-3xl md:text-5xl font-bold">
            {categoryData.name}
          </h1>
        </div>

        <!-- H2: SEO Payload (Hybrid Hook Strategy) -->
        <h2 class="text-xl md:text-2xl font-semibold text-gray-700 mb-4">
          Compare Premium {testingServiceName} & ISO 17025 Certified Labs
        </h2>

        <!-- SEO-enhanced intro text combining both keywords -->
        <p class="text-gray-600 text-base mb-4">
          Find verified <strong>{categoryData.name.toLowerCase()}</strong> and
          compare <strong>{testingServiceName.toLowerCase()}</strong> from
          ISO 17025 accredited laboratories worldwide.
          {categoryData.description && `Expert providers for ${categoryData.description.toLowerCase()}.`}
        </p>

        <p class="text-gray-700">
          <span class="font-bold text-2xl text-blue-600">{totalListings}</span>
          {' '}verified {totalListings === 1 ? 'provider' : 'providers'} across
          {' '}<span class="font-semibold">{sortedRegions.length}</span> {sortedRegions.length === 1 ? 'region' : 'regions'}
        </p>
      </div>

      <!-- Subcategories (Environmental Testing Only) -->
      {category === 'environmental-testing' && (
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Specialized Environmental Testing Services</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
            <a
              href="/environmental-testing/air-quality"
              class="bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-lg border border-blue-200 hover:shadow-md hover:border-blue-400 transition group"
            >
              <h3 class="text-lg font-bold text-blue-900 group-hover:text-blue-700 mb-2">
                Air Quality Testing
              </h3>
              <p class="text-blue-800 text-sm mb-3">
                Emissions testing, particulate matter analysis, and air monitoring services
              </p>
              <div class="text-blue-600 text-sm font-medium group-hover:underline">
                Explore air quality labs →
              </div>
            </a>

            <a
              href="/environmental-testing/water-quality"
              class="bg-gradient-to-br from-cyan-50 to-cyan-100 p-6 rounded-lg border border-cyan-200 hover:shadow-md hover:border-cyan-400 transition group"
            >
              <h3 class="text-lg font-bold text-cyan-900 group-hover:text-cyan-700 mb-2">
                Water Quality Testing
              </h3>
              <p class="text-cyan-800 text-sm mb-3">
                Drinking water testing, wastewater analysis, and groundwater monitoring
              </p>
              <div class="text-cyan-600 text-sm font-medium group-hover:underline">
                Explore water testing labs →
              </div>
            </a>

            <a
              href="/environmental-testing/soil-testing"
              class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-lg border border-green-200 hover:shadow-md hover:border-green-400 transition group"
            >
              <h3 class="text-lg font-bold text-green-900 group-hover:text-green-700 mb-2">
                Soil Testing & Contamination
              </h3>
              <p class="text-green-800 text-sm mb-3">
                Heavy metals testing, contamination analysis, and remediation assessment
              </p>
              <div class="text-green-600 text-sm font-medium group-hover:underline">
                Explore soil testing labs →
              </div>
            </a>

            <a
              href="/environmental-testing/noise-vibration"
              class="bg-gradient-to-br from-purple-50 to-purple-100 p-6 rounded-lg border border-purple-200 hover:shadow-md hover:border-purple-400 transition group"
            >
              <h3 class="text-lg font-bold text-purple-900 group-hover:text-purple-700 mb-2">
                Noise & Vibration Testing
              </h3>
              <p class="text-purple-800 text-sm mb-3">
                Acoustic testing, noise monitoring, and vibration analysis services
              </p>
              <div class="text-purple-600 text-sm font-medium group-hover:underline">
                Explore acoustic labs →
              </div>
            </a>

            <a
              href="/environmental-testing/esg-sustainability"
              class="bg-gradient-to-br from-emerald-50 to-emerald-100 p-6 rounded-lg border border-emerald-200 hover:shadow-md hover:border-emerald-400 transition group"
            >
              <h3 class="text-lg font-bold text-emerald-900 group-hover:text-emerald-700 mb-2">
                ESG & Sustainability Testing
              </h3>
              <p class="text-emerald-800 text-sm mb-3">
                Carbon footprint measurement, GHG emissions verification, and sustainability reporting
              </p>
              <div class="text-emerald-600 text-sm font-medium group-hover:underline">
                Explore ESG testing labs →
              </div>
            </a>
          </div>
        </div>
      )}

      <!-- Error Handling -->
      {listingsError && (
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
          <p class="text-red-800 text-sm">
            ⚠️ Error loading listings. Please try again later.
          </p>
        </div>
      )}

      <!-- Regions Grid -->
      {sortedRegions.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {sortedRegions.map(([region, regionListings]) => {
            const featuredCount = regionListings.filter(l => l.featured).length;
            const verifiedCount = regionListings.filter(l => l.verified).length;

            return (
              <a
                href={`/${category}/${region.toLowerCase()}`}
                class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:shadow-md hover:border-blue-400 transition group"
              >
                <div class="flex justify-between items-start mb-2">
                  <h3 class="text-xl font-bold text-gray-900 group-hover:text-blue-600">
                    {region.toUpperCase()}
                  </h3>
                  <span class="bg-blue-100 text-blue-800 text-sm font-semibold px-2.5 py-0.5 rounded">
                    {regionListings.length}
                  </span>
                </div>

                <div class="text-sm text-gray-600 space-y-1">
                  <p>{regionListings.length} {regionListings.length === 1 ? 'provider' : 'providers'}</p>
                  {featuredCount > 0 && (
                    <p class="text-yellow-600">⭐ {featuredCount} featured</p>
                  )}
                  {verifiedCount > 0 && (
                    <p class="text-green-600">✓ {verifiedCount} verified</p>
                  )}
                </div>

                <div class="mt-4 text-blue-600 text-sm font-medium group-hover:underline">
                  View all →
                </div>
              </a>
            );
          })}
        </div>
      ) : (
        <!-- Empty State -->
        <div class="text-center py-16 bg-white rounded-lg border-2 border-dashed border-gray-300">
          <p class="text-gray-500 text-lg mb-2">
            No {categoryData.name.toLowerCase()} listed yet.
          </p>
          <a href="/contact" class="text-blue-600 font-bold hover:underline">
            Be the first to list here →
          </a>
        </div>
      )}

      <!-- CTA Section -->
      {totalListings > 0 && (
        <div class="mt-12 bg-blue-50 border border-blue-200 rounded-lg p-6">
          <h2 class="text-xl font-bold text-blue-900 mb-2">
            List Your {testingServiceName}
          </h2>
          <p class="text-gray-700 mb-4">
            Reach thousands of customers searching for {categoryData.name.toLowerCase()} and {testingServiceName.toLowerCase()}. Free basic listings available.
          </p>
          <a
            href="/contact"
            class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition"
          >
            Get Listed
          </a>
        </div>
      )}

    </main>

    <!-- Footer -->
    <Footer />
  </body>
</html>
