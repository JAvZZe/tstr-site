---
// src/pages/environmental-testing/water-quality/index.astro
import { supabase } from '../../../lib/supabase';
import Footer from '../../../components/Footer.astro';

// Enable static prerendering at build time
export const prerender = true;

// Page metadata
const subcategory = 'water-quality';
const subcategoryName = 'Water Quality Testing';
const subcategoryDescription = 'Drinking water testing, wastewater analysis, and groundwater monitoring services';

// Fetch category metadata (environmental-testing)
const { data: categoryData } = await supabase
  .from('categories')
  .select('id, name, slug, description, icon')
  .eq('slug', 'environmental-testing')
  .single();

if (!categoryData) {
  return Astro.redirect('/404');
}

// Fetch listings with water quality testing capabilities
const { data: listings, error: listingsError } = await supabase
  .from('listings')
  .select(`
    id,
    business_name,
    region,
    featured,
    verified,
    custom_fields,
    location:location_id (
      id,
      name,
      slug
    )
  `)
  .eq('status', 'active')
  .eq('category_id', categoryData.id)
  .order('priority_rank', { ascending: false })
  .order('created_at', { ascending: false });

// Filter listings that have water quality testing
const waterQualityListings = listings?.filter(listing => {
  const testTypes = listing.custom_fields?.test_types || [];
  return Array.isArray(testTypes) && testTypes.some(type =>
    type.toLowerCase().includes('water quality') ||
    type.toLowerCase().includes('drinking water') ||
    type.toLowerCase().includes('wastewater') ||
    type.toLowerCase().includes('groundwater')
  );
}) || [];

// Group filtered listings by region
const listingsByRegion = new Map<string, typeof waterQualityListings>();
waterQualityListings.forEach(listing => {
  const region = listing.region || 'global';
  if (!listingsByRegion.has(region)) {
    listingsByRegion.set(region, []);
  }
  listingsByRegion.get(region)?.push(listing);
});

// Sort regions by listing count (descending)
const sortedRegions = Array.from(listingsByRegion.entries())
  .sort((a, b) => b[1].length - a[1].length);

const totalListings = waterQualityListings.length;

// Helper: Convert "Testers" to "Testing" for SEO hybrid hook
const getTestingServiceName = (categoryName: string) => {
  return categoryName.replace('Testers', 'Testing');
};

const testingServiceName = getTestingServiceName(categoryData.name);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{subcategoryName} & {testingServiceName} | TSTR.site</title>
    <meta
      name="description"
      content={`Directory of ${totalListings} verified ${subcategoryName.toLowerCase()} and ${testingServiceName.toLowerCase()}. Compare ISO 17025 accredited water testing labs and drinking water analysis services. Get quotes from certified providers.`}
    />
    <meta property="og:title" content={`${subcategoryName} & ${testingServiceName}`} />
    <meta property="og:description" content={`Find and compare verified ${subcategoryName.toLowerCase()}. ${subcategoryDescription} from ISO 17025 certified laboratories.`} />
  </head>

  <body class="bg-gray-50 min-h-screen font-sans text-gray-900">

    <!-- Navigation -->
    <nav class="bg-white shadow-sm p-4">
      <div class="max-w-6xl mx-auto">
        <a href="/" class="font-bold text-xl hover:text-blue-600 transition">
          TSTR<span class="text-blue-600">.site</span>
        </a>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-5xl mx-auto p-6">

      <!-- Breadcrumbs -->
      <div class="text-sm text-gray-500 mb-4">
        <a href="/" class="hover:underline hover:text-blue-600">Home</a>
        <span class="mx-2">›</span>
        <a href="/environmental-testing" class="hover:underline hover:text-blue-600">{categoryData.name}</a>
        <span class="mx-2">›</span>
        <span class="text-gray-900 font-medium">{subcategoryName}</span>
      </div>

      <!-- Page Header -->
      <div class="mb-8">
        <div class="flex items-center gap-3 mb-3">
          {categoryData.icon && (
            <span class="text-4xl">{categoryData.icon}</span>
          )}
          <h1 class="text-3xl md:text-5xl font-bold">
            {subcategoryName}
          </h1>
        </div>

        <!-- H2: SEO Payload (Hybrid Hook Strategy) -->
        <h2 class="text-xl md:text-2xl font-semibold text-gray-700 mb-4">
          Drinking Water Testing & Wastewater Analysis Services
        </h2>

        <!-- SEO-enhanced intro text -->
        <p class="text-gray-600 text-base mb-4">
          Find verified <strong>water quality testing laboratories</strong> and
          compare <strong>drinking water analysis services</strong> from
          ISO 17025 accredited laboratories worldwide.
          {subcategoryDescription}
        </p>

        <p class="text-gray-700">
          <span class="font-bold text-2xl text-blue-600">{totalListings}</span>
          {' '}verified water quality {totalListings === 1 ? 'provider' : 'providers'} across
          {' '}<span class="font-semibold">{sortedRegions.length}</span> {sortedRegions.length === 1 ? 'region' : 'regions'}
        </p>
      </div>

      <!-- Error Handling -->
      {listingsError && (
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
          <p class="text-red-800 text-sm">
            ⚠️ Error loading listings. Please try again later.
          </p>
        </div>
      )}

      <!-- Regions Grid -->
      {sortedRegions.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {sortedRegions.map(([region, regionListings]) => {
            const featuredCount = regionListings.filter(l => l.featured).length;
            const verifiedCount = regionListings.filter(l => l.verified).length;

            return (
              <a
                href={`/environmental-testing/${region.toLowerCase()}?filter=water-quality`}
                class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:shadow-md hover:border-blue-400 transition group"
              >
                <div class="flex justify-between items-start mb-2">
                  <h3 class="text-xl font-bold text-gray-900 group-hover:text-blue-600">
                    {region.toUpperCase()}
                  </h3>
                  <span class="bg-blue-100 text-blue-800 text-sm font-semibold px-2.5 py-0.5 rounded">
                    {regionListings.length}
                  </span>
                </div>

                <div class="text-sm text-gray-600 space-y-1">
                  <p>{regionListings.length} water quality {regionListings.length === 1 ? 'provider' : 'providers'}</p>
                  {featuredCount > 0 && (
                    <p class="text-yellow-600">⭐ {featuredCount} featured</p>
                  )}
                  {verifiedCount > 0 && (
                    <p class="text-green-600">✓ {verifiedCount} verified</p>
                  )}
                </div>

                <div class="mt-4 text-blue-600 text-sm font-medium group-hover:underline">
                  View all →
                </div>
              </a>
            );
          })}
        </div>
      ) : (
        <!-- Empty State -->
        <div class="text-center py-16 bg-white rounded-lg border-2 border-dashed border-gray-300">
          <p class="text-gray-500 text-lg mb-2">
            No water quality testing providers listed yet.
          </p>
          <p class="text-gray-400 text-sm mb-4">
            We're working to add accredited water testing laboratories.
          </p>
          <a href="/contact" class="text-blue-600 font-bold hover:underline">
            Be the first to list here →
          </a>
        </div>
      )}

      <!-- CTA Section -->
      {totalListings > 0 && (
        <div class="mt-12 bg-blue-50 border border-blue-200 rounded-lg p-6">
          <h2 class="text-xl font-bold text-blue-900 mb-2">
            List Your Water Quality Testing Services
          </h2>
          <p class="text-gray-700 mb-4">
            Reach thousands of customers searching for drinking water testing and wastewater analysis. Free basic listings available.
          </p>
          <a
            href="/contact"
            class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition"
          >
            Get Listed
          </a>
        </div>
      )}

    </main>

    <!-- Footer -->
    <Footer />
  </body>
</html>