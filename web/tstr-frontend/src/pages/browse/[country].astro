import { supabase } from '../../lib/supabase'

// Get all listings to generate static paths
export async function getStaticPaths() {
  const { data: locations } = await supabase
    .from('locations')
    .select('id, name, slug, level')
    .eq('level', 'country')

  // Generate paths for each country
  return locations?.map(location => ({
    params: { country: location.slug },
    props: { countryName: location.name, countryId: location.id }
  })) || []
}

const { country } = Astro.params
const { countryName, countryId } = Astro.props

// Fetch listings for this country
const { data: listings } = await supabase
  .from('listings')
  .select(`
    *,
    location:location_id (
      id,
      name,
      slug,
      level,
      parent:parent_id (
        id,
        name,
        slug,
        level,
        parent:parent_id (
          id,
          name,
          slug,
          level
        )
      )
    )
  `)
  .eq('status', 'active')
  .or(`location_id.eq.${countryId},location.parent_id.eq.${countryId},location.parent.parent_id.eq.${countryId}`)
  .order('created_at', { ascending: false })

const totalListings = listings.length
