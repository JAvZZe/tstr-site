---
import { supabase } from '../../../lib/supabase'
import { CONTENT } from '../../../lib/contacts'
import Footer from '../../../components/Footer.astro'
import { getRedirectUrl } from '../../../lib/redirect'

// Get all listings to generate static paths
export async function getStaticPaths() {
  const { data: locations } = await supabase
    .from('locations')
    .select('id, name, slug, level')
    .eq('level', 'city')

  // Generate paths for each city
  return locations?.map(location => ({
    params: { city: location.slug },
    props: { cityName: location.name, cityId: location.id }
  })) || []
}

const { city } = Astro.params
const { cityName, cityId } = Astro.props

// Fetch listings for this city
const { data: listings } = await supabase
  .from('listings')
  .select(`
    *,
    location:location_id (
      id,
      name,
      slug,
      level,
      parent:parent_id (
        id,
        name,
        slug,
        level,
        parent:parent_id (
          id,
          name,
          slug,
          level
        )
      )
    )
  `)
  .eq('status', 'active')
  .eq('location_id', cityId)
  .order('created_at', { ascending: false })

const totalListings = listings.length
