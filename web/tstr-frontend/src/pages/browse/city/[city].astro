import { supabase } from '../../../lib/supabase'

// Extract city from address
const extractCity = (address) => {
  if (!address) return null
  const parts = address.split(',').map(p => p.trim()).filter(p => p.length > 0)
  if (parts.length < 2) return parts[0]
  if (parts.length >= 3) {
    const potentialCity = parts[parts.length - 3]
    if (!/^\d+$/.test(potentialCity) && !/^[A-Z0-9\s-]{2,10}$/.test(potentialCity)) {
      return potentialCity
    }
  }
  return parts[parts.length - 2]
}

// Get all listings to generate static paths
export async function getStaticPaths() {
  const { data: listings } = await supabase
    .from('listings')
    .select('*')
    .eq('status', 'active')

  // Get unique cities
  const cities = [...new Set(listings?.map(l => extractCity(l.address))).values()].filter(Boolean)

  // Generate paths for each city
  return cities.map(city => ({
    params: { city: city.toLowerCase().replace(/\s+/g, '-') },
    props: { cityName: city }
  }))
}

const { city } = Astro.params
const { cityName } = Astro.props

// Fetch all listings for this city
const { data: allListings } = await supabase
  .from('listings')
  .select('*')
  .eq('status', 'active')
  .order('created_at', { ascending: false })

// Filter listings for this city
const listings = allListings?.filter(l => {
  const listingCity = extractCity(l.address)
  return listingCity?.toLowerCase().replace(/\s+/g, '-') === city
}) || []

const totalListings = listings.length
