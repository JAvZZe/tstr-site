---
/**
 * ⚠️ CENTRALIZED FOOTER COMPONENT ⚠️
 * 
 * This is the SINGLE footer for the entire site.
 * All footer content is managed in: src/lib/contacts.ts
 * 
 * WHY THIS EXISTS:
 * - Update footer once, changes everywhere
 * - Consistent styling across all pages
 * - Centralized content management
 * 
 * HOW TO USE:
 * In any Astro page:
 * ```astro
 * import Footer from '../components/Footer.astro'
 * 
 * <Footer />
 * ```
 * 
 * TO UPDATE FOOTER:
 * ✅ DO: Edit src/lib/contacts.ts (CONTENT.footerTagline, CONTENT.footerLinks)
 * ❌ DON'T: Edit this component (unless changing structure/styling)
 * 
 * Created: 2025-11-20
 */

import { CONTENT } from '../lib/contacts'
---

<footer>
  <p>&copy; 2025 TSTR Hub - Specialist Testing Services, Products and Solutions Directory</p>
  <p style="margin-top: 0.5rem; opacity: 0.8; font-size: 0.9rem;">
    {CONTENT.footerTagline}
  </p>
   <p style="margin-top: 1rem;">
     {CONTENT.footerLinks.map((link, index) => (
       <>
         {link.icon === 'linkedin' ? (
           <a href={link.href} style="color: white; text-decoration: none; margin: 0 1rem; display: inline-block;" title={link.label}>
             <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
               <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
             </svg>
           </a>
         ) : (
           <a href={link.href} style="color: white; text-decoration: none; margin: 0 1rem;">
             {link.label}
           </a>
         )}
       </>
     ))}
   </p>
</footer>

<style>
  footer {
    background: linear-gradient(135deg, #000080 0%, #32CD32 100%);
    color: white;
    text-align: center;
    padding: 2rem 1rem;
    margin-top: auto;
  }

  footer p {
    margin: 0;
  }

  footer a {
    color: white;
    text-decoration: none;
    margin: 0 1rem;
  }

  footer a:hover {
    text-decoration: underline;
  }
</style>
